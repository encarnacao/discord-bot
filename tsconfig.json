{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@repositories": ["src/repositories/index.ts"],
			"@services": ["src/services/index.ts"],
			"@utils": ["src/utils/index.ts"],
			"@types": ["src/types/index.ts"],
			"@aws": ["src/aws/index.ts"],
			"@database": ["src/database/index.ts"],
			"@api": ["src/api/index.ts"],
			"@discord": ["src/discord/index.ts"],
			"@discord/slash-commands": ["src/discord/slash-commands/index.ts"],
			"@discord/button-handlers": ["src/discord/button-handlers/index.ts"]
		}
	},
	"include": ["src/**/*.ts"]
}
