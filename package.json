{
	"name": "discord-bot",
	"version": "1.0.0",
	"description": "",
	"main": "src/app.js",
	"scripts": {
		"build": "tsc && tsc-alias",
		"stop": "pm2 stop discord-bot && pm2 delete discord-bot",
		"start:pm2": "npm run build && pm2 start ./dist/app.js --name discord-bot | pino-pretty",
		"start": "npm run build && node ./dist/app.js | pino-pretty",
		"restart": "npm run stop && npm run start",
		"service:up": "docker compose up -d",
		"service:down": "docker compose down",
		"service:stop": "docker compose stop"
	},
	"devDependencies": {
		"@types/node": "^24.3.0",
		"@types/pg": "^8.15.5",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.16",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@aws-sdk/client-ssm": "^3.603.0",
		"discord.js": "^14.24.2",
		"dotenv": "^16.4.5",
		"jwt-decode": "^4.0.0",
		"node-cron": "^4.2.1",
		"node-pg-migrate": "^8.0.3",
		"pg": "^8.12.0",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.2"
	}
}
